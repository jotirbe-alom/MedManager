@model MedManager.Models.med_info

@{
    Layout = null;
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            text-align: center;
        }

        .banner {
            background-image: url('/Image/medicinebanner.jpg');
            
            background-position: center;
            width: 100%;
            height: 250px;
            border-radius: 8px 8px 0 0;
            margin-bottom: 20px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-horizontal {
            text-align: left;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: calc(100% - 20px);
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .back-link {
            margin-top: 20px;
            display: block;
            text-align: center;
            color: #007bff;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="banner">
            <!-- Banner content (optional) -->
        </div>
        @using (Html.BeginForm("addMed", "PharmaMod", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Medicine Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!--
    <div class="form-group">
        @Html.LabelFor(model => model.med_id, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.med_id, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.med_id, "", new { @class = "text-danger" })
    </div>
         -->

        <div class="form-group">
            @Html.LabelFor(model => model.med_name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.med_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.med_name, "", new { @class = "text-danger" })
        </div>
        <!--
    <div class="form-group">
        @Html.LabelFor(model => model.med_img, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.med_img, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.med_img, "", new { @class = "text-danger" })
    </div>
             -->
        <!-- File upload field -->
        <div class="form-group">
            <label for="med_img_upload" class="control-label">Upload Medicine Image</label>
            <input type="file" name="med_img_upload" class="form-control" />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quantity, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.med_price, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.med_price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.med_price, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn" />
        </div>
    </div>
        }
        <a href="@Url.Action("Index")" class="back-link">Back to List</a>
    </div>
</body>
</html>
