
@{
    Layout = null;
    ViewBag.Title = "AdminPanel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f6e2bc;
            margin: 0;
        }

        .navbar {
            width: 100%;
            height: 20px;
            background-color: #3b7097;
            color: #fff;
            padding: 15px 20px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1001;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar h1 {
                margin: 0;
                font-size: 1.5rem;
            }

            .navbar a.logout {
                background-color: #dc3545;
                color: #fff;
                padding: 10px 15px;
                border-radius: 5px;
                text-decoration: none;
                transition: background 0.3s ease;
                margin-left: auto;
                margin-right: 50px;
            }

                .navbar a.logout:hover {
                    background-color: #c82333;
                }

        .container {
            margin-top: 70px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .admin-panel {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .top-row {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .bottom-row {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .admin-option {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 200px;
            margin: 10px;
            transition: background 0.3s ease;
        }

            .admin-option:hover {
                background-color: #007bff;
                color: #fff;
            }

            .admin-option i {
                font-size: 2rem;
                margin-bottom: 10px;
                color: #a9d09e
            }

            .admin-option h2 {
                font-size: 1.2rem;
                margin: 10px 0;
            }

            .admin-option a {
                text-decoration: none;
                color: inherit;
            }

            .admin-option p {
                font-size: 1rem;
            }
    </style>
</head>
<body>
    <div class="navbar">
        <h1>Admin Panel</h1>
        
        <a href="@Url.Action("Index", "Home")" class="logout">Logout</a>
    </div>
    <div class="container">
        <div class="admin-panel">
            <div class="top-row">
                <div class="admin-option">
                    <i class="fas fa-users"></i>
                    <h2>@Html.ActionLink("UserInfo", "UserInfo", "Admin")</h2>
                    <p>Manage user information and details.</p>
                </div>
                <div class="admin-option">
                    <i class="fas fa-user-shield"></i>
                    <h2>@Html.ActionLink("PharmaModInfo", "PharmaModInfo", "Admin")</h2>
                    <p>Manage pharmacy moderators.</p>
                </div>
                <div class="admin-option">
                    <i class="fas fa-user-plus"></i>
                    <h2>@Html.ActionLink("AddPharmaMod", "AddPharmaMod", "Admin")</h2>
                    <p>Add new pharmacy moderator.</p>
                </div>
            </div>
            <div class="bottom-row">
                <div class="admin-option">
                    <i class="fas fa-credit-card"></i>
                    <h2>@Html.ActionLink("UserPaymentInfo", "UserPaymentInfo", "Admin")</h2>
                    <p>Manage user payment information.</p>
                </div>
                <div class="admin-option">
                    <i class="fas fa-dollar-sign"></i>
                    <h2><a href="#">Moderator Salary Details</a></h2>
                    <p>View and manage moderator salaries.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


