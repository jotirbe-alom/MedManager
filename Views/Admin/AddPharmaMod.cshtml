@{
    Layout = null;
    ViewBag.Title = "AddPharmaMod";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Moderator</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
        }

        .card {
            background: linear-gradient(135deg, lightgreen, lightblue);
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 600px;
            width: 100%;
            margin: 0 auto;
            color: #333;
        }

            .card img {
                max-width: 100%;
                border-radius: 8px;
                margin-bottom: 20px;
            }

            .card h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
            position: relative;
        }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                font-size: 20px;
                color: green;
            }

            .form-group input {
                width: 90%;
                padding: 10px 10px 10px 40px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

            .form-group button {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 4px;
                background-color: #ff5733;
                color: white;
                font-size: 16px;
                cursor: pointer;
            }

                .form-group button:hover {
                    background-color: #cc4629;
                }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="card">
            <img src="~/Image/pharmaModimg.jpg" alt="">
            <h2>Add Pharmacy Moderator</h2>
            <form asp-action="AddPharmaMod" method="post">
                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="Username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email"  name="Email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="PasswordHash" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>


