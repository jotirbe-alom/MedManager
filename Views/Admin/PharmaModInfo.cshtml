@model IEnumerable<MedManager.Models.pharmaMod>

@{
    Layout = null;
    ViewBag.Title = "PharmaModInfo";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PharmaModInfo</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            width: 80%;
            margin: 0 auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #007bff;
                color: white;
                padding: 15px;
                text-align: center;
            }

            .table td {
                text-align: center;
                padding: 15px;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .btn {
            margin-right: 5px;
        }

        .action-links {
            display: flex;
            justify-content: center;
        }

            .action-links a {
                color: white;
                padding: 8px 16px;
                margin: 0 5px;
                background-color: #dc3545;
                border-radius: 5px;
                text-decoration: none;
            }

                .action-links a:hover {
                    background-color: #c82333;
                }

        .container {
            padding: 30px;
        }
        .back-link {
            text-align: center;
            margin-bottom: 20px;
        }

            .back-link a {
                color: #007bff;
                text-decoration: none;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Pharmacy Moderator Information</h1>

        <div class="back-link">
            <p>
                @Html.ActionLink("Admin Panel", "AdminPanel", "Admin")
            </p>
        </div>

        <table class="table table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="action-links">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>

    <!-- Bootstrap JS and dependencies (optional, for extra features) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
